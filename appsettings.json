{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.File", "Serilog.Sinks.Console"],
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "Logs\\Igor.log",
          "rollingInterval": "Day"
        }
      },
      { "Name": "Console" }
    ]
  },
  "ConnectionStrings": {
    "LiteDatabase": "IgorBot.db"
  }
}